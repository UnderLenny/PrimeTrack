<Page x:Class="PrimeTrack.Views.Pages.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrimeTrack.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientsPage">

    <Grid>
        <StackPanel>
            <TextBox x:Name="SearchTextBox" Width="200" Margin="5"/>
            <Button Content="Search" Click="SearchButton_Click" Width="200" Margin="5"/>
            <Button Content="Add Client" Click="AddClientButton_Click" Width="200" Margin="5"/>
            <Button Content="Edit Client" Click="EditClientButton_Click" Width="200" Margin="5"/>
            <Button Content="Delete Client" Click="DeleteClientButton_Click" Width="200" Margin="5"/>
            <DataGrid x:Name="ClientsDataGrid" AutoGenerateColumns="True" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
