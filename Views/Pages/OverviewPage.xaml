<Page x:Class="PrimeTrack.Views.Pages.OverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PrimeTrack.Views.Pages"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OverviewPage">

    <Grid>
        <StackPanel>
            <TextBlock FontSize="20" FontWeight="Bold" Margin="10" Text="Обзор текущих данных" />

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock FontSize="14" FontWeight="Bold" Text="Количество клиентов: " />
                <TextBlock FontSize="14" Name="ClientCountTextBlock" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock FontSize="14" FontWeight="Bold" Text="Количество партий на складе: " />
                <TextBlock FontSize="14" Name="BatchCountTextBlock" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock FontSize="14" FontWeight="Bold" Text="Средний размер партии: " />
                <TextBlock FontSize="14" Name="AvgBatchSizeTextBlock" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
