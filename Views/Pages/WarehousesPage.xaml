<Page x:Class="PrimeTrack.Views.Pages.WarehousesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PrimeTrack.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WarehousesPage">

    <Grid>
        <StackPanel>
            <TextBox x:Name="SearchTextBox" Width="200" Margin="5"/>
            <Button Content="Search" Click="SearchButton_Click" Width="200" Margin="5"/>
            <Button Content="Add Warehouse" Click="AddWarehouseButton_Click" Width="200" Margin="5"/>
            <Button Content="Edit Warehouse" Click="EditWarehouseButton_Click" Width="200" Margin="5"/>
            <Button Content="Delete Warehouse" Click="DeleteWarehouseButton_Click" Width="200" Margin="5"/>
            <DataGrid x:Name="WarehousesDataGrid" AutoGenerateColumns="True" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
